{
  "name": "template-react-cra",
  "version": "0.0.1",
  "license": "Apache-2.0",
  "scripts": {
    "start": "react-scripts start",
    "build": "BUILD_PATH=./dist react-scripts build",
    "test": "CI=true react-scripts test --passWithNoTests",
    "clean": "rm -rf dist",
    "realclean": "rm -rf dist node_modules yarn",
    "format-code": "prettier src/**/*.{ts,tsx,css} --write",
    "check-type-checking": "tsc --noEmit",
    "check-code-formatting": "prettier src/**/*.{ts,tsx,css} --check"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@testing-library/dom": "8.11.3",
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/react": "12.1.2",
    "@testing-library/user-event": "13.5.0",
    "@types/jest": "27.4.0",
    "@types/node": "17.0.13",
    "@types/react": "17.0.38",
    "@types/react-dom": "17.0.11",
    "prettier": "2.5.1",
    "react-scripts": "5.0.0",
    "typescript": "4.5.5"
  }
}
